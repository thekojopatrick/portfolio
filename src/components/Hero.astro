---
import ShimmerButton from "@/components/ui/shimmer-button";

const roles = [
  "React/TypeScript",
  "Platforms",
  "SaaS Architecture",
  "AI Prototyping",
  "UX Engineering",
  "Supabase",
  "Framer Motion",
  "Business Analystics",
  "PM",
];
---

<section
  id="hero"
  class="min-h-[85vh] flex flex-col justify-center py-24 md:py-32 px-6 md:px-12 relative overflow-hidden"
>
  <div class="space-y-8 md:space-y-12">
    <!-- Semantic H1 for SEO -->
    <h1
      class="font-serif text-display md:text-display-lg leading-[0.9] tracking-tighter text-neutral-900 dark:text-neutral-50 reveal"
    >
      Designing & Building <br />
      <span class="italic text-neutral-500 dark:text-neutral-400"
        >Intelligent Systems.</span
      >
    </h1>

    <div
      class="flex flex-col md:flex-row gap-8 md:gap-24 items-start md:items-end max-w-5xl reveal"
      style="transition-delay: 100ms;"
    >
      <div class="space-y-6 w-full lg:max-w-xl">
        <h2
          class="text-xl md:text-2xl font-medium text-neutral-900 dark:text-neutral-50 leading-relaxed"
        >
          I'm Kojo Patrick, Product Engineer helping businesses build
          <span class="border-b border-neutral-300 dark:border-neutral-700">
            AI Assistants
          </span>
          and simple,
          <span class="border-b border-neutral-300 dark:border-neutral-700">
            human-centered digital products.
          </span>
        </h2>
        <p
          class="text-lg text-neutral-600 dark:text-neutral-400 leading-relaxed text-balance"
        >
          I make AI easy for businesses by turning complex LLM capabilities into
          simple, intuitive experiences. I specialize in building scalable,
          design-driven software that solves real problems.
        </p>
      </div>

      <div class="flex flex-col gap-4 w-full lg:max-w-xl">
        <div
          class="flex gap-3 items-center text-sm font-medium tracking-wide uppercase text-neutral-500 dark:text-neutral-400"
        >
          <span class="relative flex h-2 w-2">
            <span
              class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"
            ></span>
            <span class="relative inline-flex rounded-full h-2 w-2 bg-green-500"
            ></span>
          </span>
          <span>Available for new projects</span>
        </div>

        <div class="flex gap-2 flex-wrap">
          {
            ["AI Engineering", "Product Design", "System Architecture"].map(
              (tag) => (
                <span class="px-3 py-1 text-xs font-mono border border-neutral-200 dark:border-neutral-800 rounded-full text-neutral-600 dark:text-neutral-400 hover:bg-neutral-100 dark:hover:bg-neutral-800 transition-colors cursor-default">
                  {tag}
                </span>
              ),
            )
          }
        </div>
      </div>
    </div>
  </div>

  <!-- Subtle background decoration -->
  <div
    class="absolute top-1/2 right-0 -translate-y-1/2 translate-x-1/3 w-[500px] h-[500px] bg-neutral-200/20 dark:bg-neutral-800/20 rounded-full blur-3xl -z-10 pointer-events-none animate-pulse duration-[4000ms]"
  >
  </div>
</section>
