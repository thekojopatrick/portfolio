---
import { cn } from "@lib/utils";

type Props = {
  id?: string;
  href: string;
  external?: boolean;
  underline?: boolean;
  className?: string;
  button?: boolean;
};

const {
  id,
  href,
  external,
  className,
  button,
  underline = true,
  ...rest
} = Astro.props;
---

<a
  id={id}
  href={href}
  target={external ? "_blank" : "_self"}
  class={cn(
    button
      ? "button-bezel"
      : "inline-block font-medium decoration-black/15  hover:decoration-black/25  text-current hover:text-black  transition-colors duration-300 ease-in-out",
    underline && "underline underline-offset-2",
    className,
  )}
  {...rest}
>
  <slot />
</a>
