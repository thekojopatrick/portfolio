---
import { SITE } from "@consts";
import Link from "./Link.astro";
import Container from "./Container.astro";
import { MobileNav } from "./MobileNav";
---

<header
  class="mix-blend-difference z-50 fixed top-0 left-0 w-full p-6 md:p-12 flex justify-between items-start pointer-events-none"
>
  <div class="pointer-events-auto">
    <Link href="/" underline={false} className="block group">
      <div
        class="font-serif text-2xl md:text-3xl leading-none tracking-tight text-white group-hover:italic transition-all duration-300"
      >
        {SITE.NAME.toLowerCase()}.
      </div>
    </Link>
  </div>

  <nav class="pointer-events-auto flex flex-col items-end gap-2 md:gap-4">
    <div
      class="flex flex-col items-end gap-1 text-sm md:text-base font-medium text-white/90"
    >
      <Link
        href="/about"
        underline={false}
        className="hover:italic transition-all">index</Link
      >
      <Link
        href="/projects"
        underline={false}
        className="hover:italic transition-all">archive</Link
      >
      <Link
        id="contact-me"
        href={`mailto:${SITE.EMAIL}`}
        underline={false}
        className="hover:italic transition-all">contact</Link
      >
    </div>
    <MobileNav client:load email={SITE.EMAIL} />
  </nav>
</header>
