---
import { SITE } from "@consts";
import Link from "./Link.astro";
import Container from "./Container.astro";
import { MobileNav } from "./MobileNav";
---

<header>
  <Container className="px-2 md:px-5">
    <nav
      class="flex flex-wrap max-w-3xl shadow-sm mx-auto gap-y-2 justify-between border border-zinc-200 rounded-full px-4 md:pr-0 md:pl-4 py-2 items-center bg-white/80 md:backdrop-blur-sm md:animate"
    >
      <Link href="/" underline={false}>
        <div class="font-medium text-sm">
          {SITE.NAME}
        </div>
      </Link>
      <nav class="flex gap-2 items-center">
        <div class="hidden md:block space-x-2">
          <Link href="/about" underline={false}> story </Link>
          <Link href="/projects" underline={false}> projects </Link>
        </div>
        <div class="hidden md:block">
          <Link
            button={true}
            href={`mailto:${SITE.EMAIL}`}
            underline={false}
            className="px-4 py-2 ml-2 rounded-full"
          >
            say <span class="font-serif italic">"Hello!"</span>
          </Link>
        </div>
        <MobileNav client:load email={SITE.EMAIL} />
      </nav>
    </nav>
  </Container>
</header>
