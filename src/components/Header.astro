---
import { SITE } from "@consts";
import Link from "./Link.astro";
import Container from "./Container.astro";
---

<header>
  <Container>
    <nav class="flex flex-wrap gap-y-2 justify-between border rounded-full px-4 py-3 items-center">
      <Link href="/" underline={false}>
        <div class="font-semibold">
          {SITE.NAME}
        </div>
      </Link>
      <nav class="flex gap-2 items-center">
        <Link href="#story" underline={false}>
          story
        </Link>
      
        <Link href="/work" underline={false}>
          work
        </Link>
        <Link href="/projects" underline={false}>
          projects
        </Link>
        <Link button={true} href={`mailto:${SITE.EMAIL}`} underline={false} className="px-4 py-2 ml-2 rounded-full ">
          Say "Hello!"
        </Link>
      </nav>
    </nav>
  </Container>
</header>

