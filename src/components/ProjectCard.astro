---
import { Image } from "astro:assets";
import { Card } from "./ui/clerk-card";

interface Props {
  category: string;
  title: string;
  subtitle: string;
  description: string;
  images: {
    src: string;
    alt: string;
  }[];
  logo?: string;
  href: string;
}

const { category, title, subtitle, description, href, images, ...props } =
  Astro.props;
---

<Card title={category}>
  <div class="grid md:grid-cols-[1fr,1.5fr] gap-6">
    <div class="space-y-6">
      <div class="space-y-4">
        <h2 class="text-2xl font-semibold">{title}</h2>
        <p class="text-muted-foreground">{subtitle}</p>
        <p class="text-lg">{description}</p>
      </div>
      <button class="rounded-full">
        <a href={href}>Open case</a>
      </button>
    </div>

    <div class="grid grid-cols-2 gap-4 relative">
      {
        images.map((image, index) => (
          <div
            id={`${index}`}
            class="relative aspect-[3/4] rounded-xl overflow-hidden"
          >
            <Image
              src={image.src}
              alt={image.alt}
              class="object-cover"
              width={400}
              height={600}
            />
          </div>
        ))
      }
    </div>
  </div>
</Card>
