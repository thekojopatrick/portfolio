---
import { Image } from "astro:assets";
import { Card } from "./ui/clerk-card";

interface Props {
  category: string;
  title: string;
  subtitle: string;
  description: string;
  image: {
    src: string;
    alt: string;
  };
  logo?: string;
  href: string;
}

const { category, title, subtitle, description, href, logo, image, ...props } =
  Astro.props;
---

<Card title={category}>
  <div class="grid md:grid-cols-[1fr,1.5fr] gap-6 p-4">
    <div class="grid grid-rows-[400px,300px]">
      <div class="space-y-6">
        <div class="space-y-4">
          <h2 class="text-2xl font-semibold">{title}</h2>
          <p class="text-muted-foreground">{subtitle}</p>
          <p class="text-lg">{description}</p>
        </div>
        <button class="rounded-full">
          <a href={href}>Open case</a>
        </button>
      </div>
      <div class="border size-full rounded-xl overflow-hidden bg-zinc-100">
        <Image
          src={logo || ""}
          alt={`${title} logo`}
          width={400}
          height={400}
          class="object-contain size-full p-4"
        />
      </div>
    </div>
    <div
      class="relative h-full aspect-square rounded-xl bg-zinc-100 overflow-hidden border"
    >
      <Image
        src={image.src}
        alt={image.alt}
        class="object-cover object-right h-full"
        width={800}
        height={800}
      />
    </div>
  </div>
</Card>
