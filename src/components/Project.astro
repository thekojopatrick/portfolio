---
type Props = {
  title: string;
  description: string;
  tags: string[];
  coverImageSrc: string;
  imageAlt: string;
  tagline?: string;
  showLiveDemo?: boolean;
};

const {
  title,
  description,
  tags,
  coverImageSrc,
  imageAlt,
  tagline,
  showLiveDemo,
} = Astro.props;
---

<div class="max-w-7xl mx-auto">
  <nav class="flex items-center justify-between space-x-6 mb-12">
    <div class="items-center">
      <div
        class="w-12 h-12 bg-black rounded-full hidden items-center justify-center"
      >
        <span class="text-white text-lg font-semibold">{title}</span>
      </div>
      <h1 class="text-3xl font-semibold">{title}</h1>
    </div>
    {
      showLiveDemo && (
        <div class="ml-auto">
          <button class="bg-black text-white px-4 py-2 rounded-full text-sm">
            Live Demo â†’
          </button>
        </div>
      )
    }
  </nav>

  <div class="mb-6">
    <p class="text-gray-600 dark:text-gray-200 max-w-2xl">
      {description}
    </p>
  </div>

  {
    tags.length > 0 && (
      <div class="flex flex-wrap gap-6 mb-12">
        {tags.map((tag, index) => (
          <span
            id={`${index}`}
            class="text-gray-600 dark:text-gray-200 bg-zinc-100 px-1 rounded-full font-medium text-sm"
          >
            {tag}
          </span>
        ))}
      </div>
    )
  }

  <div class="relative">
    <div class="relative bg-white p-2 rounded-xl">
      <img src={coverImageSrc} alt={imageAlt} class="w-full rounded-lg" />
      {
        tagline && (
          <div class="absolute bottom-8 left-0 right-0 text-center sr-only">
            <span class="text-sm text-zinc-600">{tagline}</span>
          </div>
        )
      }
    </div>
  </div>
</div>
