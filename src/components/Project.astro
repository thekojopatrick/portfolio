---
type Props = {
  title: string;
  description: string;
  tags: string[];
  coverImageSrc: string;
  imageAlt: string;
  tagline?: string;
  showLiveDemo?: boolean;
};

const {
  title,
  description,
  tags,
  coverImageSrc,
  imageAlt,
  tagline,
  showLiveDemo,
} = Astro.props;
---

<div class="max-w-7xl mx-auto">
  <div class="mb-6">
    <p class="text-gray-600 dark:text-gray-400 max-w-2xl">
      {description}
    </p>
  </div>

  {
    tags.length > 0 && (
      <div class="flex flex-wrap gap-6 mb-12">
        {tags.map((tag, index) => (
          <span
            id={`${index}`}
            class="text-gray-600 dark:text-gray-400 bg-zinc-100 dark:bg-zinc-800 px-1 rounded-full font-medium text-sm"
          >
            {tag}
          </span>
        ))}
      </div>
    )
  }

  <div class="relative">
    <div class="relative bg-white p-2 rounded-xl dark:bg-zinc-800">
      <img src={coverImageSrc} alt={imageAlt} class="w-full rounded-lg" />
      {
        tagline && (
          <div class="absolute bottom-8 left-0 right-0 text-center sr-only">
            <span class="text-sm text-zinc-600 dark:text-zinc-400">
              {tagline}
            </span>
          </div>
        )
      }
    </div>
  </div>
</div>
