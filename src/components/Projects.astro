---
import { getCollection } from "astro:content";
import Link from "./Link.astro";

// Fake high-end data for aesthetic purposes
const PROJECTS = [
  {
    title: "Vogue Italia",
    year: "2024",
    service: "Art Direction",
    link: "#",
  },
  {
    title: "Aesop Skincare",
    year: "2023",
    service: "E-commerce",
    link: "#",
  },
  {
    title: "Linear",
    year: "2023",
    service: "Product Design",
    link: "#",
  },
  {
    title: "Dieter Rams Archive",
    year: "2022",
    service: "Web Development",
    link: "#",
  },
  {
    title: "MoMA",
    year: "2022",
    service: "Digital Exhibition",
    link: "#",
  },
];
---

<section class="py-24 md:py-32">
  <div
    class="flex items-baseline justify-between mb-12 border-b border-neutral-200 pb-4"
  >
    <h2 class="font-serif text-3xl md:text-4xl text-neutral-900">
      Selected Works
    </h2>
    <span class="text-sm font-mono text-neutral-500">(05)</span>
  </div>

  <div class="flex flex-col">
    {
      PROJECTS.map((project) => (
        <Link href={project.link} underline={false} className="group">
          <div class="flex flex-col md:flex-row md:items-baseline justify-between py-6 border-b border-neutral-200 group-hover:border-neutral-900 transition-colors duration-300">
            <h3 class="font-serif text-2xl md:text-3xl text-neutral-400 group-hover:text-neutral-900 group-hover:italic transition-all duration-300">
              {project.title}
            </h3>
            <div class="flex gap-8 md:gap-24 text-sm md:text-base font-mono text-neutral-500 group-hover:text-neutral-900 transition-colors duration-300 mt-2 md:mt-0">
              <span class="w-32">{project.service}</span>
              <span>{project.year}</span>
            </div>
          </div>
        </Link>
      ))
    }
  </div>

  <div class="mt-12 text-center md:text-right">
    <Link
      href="/projects"
      underline={true}
      className="font-serif italic text-xl text-neutral-600 hover:text-neutral-900"
    >
      View full archive &rarr;
    </Link>
  </div>
</section>
