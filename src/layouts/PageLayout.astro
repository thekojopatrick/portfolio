---
import Head from "@components/Head.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import ThemeToggle from "@components/ThemeToggle.astro";
import { ViewTransitions } from "astro:transitions";
import { SITE } from "@consts";

type Props = {
  title: string;
  description: string;
};

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <Head title={`${SITE.NAME} | ${title}`} description={description} />
    <ViewTransitions />
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-QBGYSF417P"
    ></script><script id="google-analytics">
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", `${SITE.GA_TRACKING_ID}`, {
        page_path: window.location.pathname,
      });
    </script>
  </head>

  <body>
    <Header />
    <main class="pt-32">
      <slot />
    </main>
    <Footer />
    <ThemeToggle />
    <script>
      import { animate, inView, stagger } from "motion";

      const setupAnimations = () => {
        // Global Scroll Reveal
        inView(".reveal", ({ target }) => {
          animate(
            target,
            { opacity: [0, 1], y: [20, 0], filter: ["blur(10px)", "blur(0px)"] },
            { duration: 0.8, easing: [0.17, 0.55, 0.55, 1] }
          );
        });

        // Staggered list items
        inView(".reveal-stagger", ({ target }) => {
          animate(
            target.querySelectorAll(".reveal-child"),
            { opacity: [0, 1], y: [20, 0] },
            { delay: stagger(0.1), duration: 0.5, easing: [0.17, 0.55, 0.55, 1] }
          );
        });
      };

      // Initial load
      setupAnimations();

      // View Transitions
      document.addEventListener("astro:page-load", setupAnimations);
    </script>
  </body>
</html>
